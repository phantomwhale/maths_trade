<h1>Edit Trade Row for <%= @trade_row.offer.name %></h1>

<%= form_for @trade_row, url: offer_trade_row_path(@trade_row.offer_id, @trade_row) do |form| %>
  <%= render 'trade_row_form' %>
  <%= form.submit 'Update Trade Row', class: 'btn btn-primary' %>
  <%= link_to 'Delete Trade Row', offer_trade_row_path(@trade_row.offer_id, @trade_row), method: 'delete',
    confirm: 'This will delete all games from this trade row, are you sure?', class: 'btn btn-danger' %>
<% end %>
